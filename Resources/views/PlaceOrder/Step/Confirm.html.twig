{% extends "PlaceOrder/Step/default.html.twig" %}

{% block form_content %}
    <fieldset id="customerInformation"><legend>Customer</legend>
        {{ order.customerFirstNames }}
    </fieldset>

    {% for suborder in order.suborders %}
        <fieldset><legend>{{ suborder.description }}</legend>
            {% for line in suborder.lineItems %}
                {{ line.description }} {{ line.amount }}
            {% endfor %}
        </fieldset>
    {% endfor %}
    {{ form_rest(form) }}
{% endblock %}

{% block buttons %}
    <input type="submit" class="btn" name="process-navigation-back" value="Back" />
    <input type="submit" class="btn btn-primary" name="process-navigation-forward" value="Proceed" />
{% endblock %}
